{
  "name": "synaptic-engine",
  "version": "1.0.0",
  "description": "",
  "main": "engine.js",
  "scripts": {
    "build": "NODE_ENV=production `npm bin`/tsc && NODE_ENV=production webpack --config webpack.config.js",
    "build:test": "NODE_ENV=test `npm bin`/tsc && NODE_ENV=test webpack --config webpack.config.js",
    "test": "npm run build:test && jest --logHeapUsage --runInBand",
    "test:node": "npm run build:test && NODE_ENV=node jest --logHeapUsage --runInBand",
    "profile": "npm run test && (rm *.log || true) && node --prof perf/runPerf.js && (for f in *.log; do node --prof-process $f; done)",
    "profile:node": "npm run test:node && (rm *.log || true) && (NODE_ENV=node node --prof perf/runPerf.js) && (for f in *.log; do node --prof-process $f; done)",
    "test:watch": "npm run build:test && jest --watch",
    "test:coverage": "npm run build:test && jest --coverage",
    "dev": "webpack-dashboard -- webpack-dev-server --config ./webpack.config.js",
    "build:node": "`npm bin`/tsc"
  },
  "author": "Juan Cazala <cazala@mail.sfsu.edu> (http://caza.la/)",
  "license": "MIT",
  "devDependencies": {
    "jest-cli": "^16.0.2",
    "mersenne-twister": "^1.1.0",
    "ts-loader": "^2.0.3",
    "tslint": "^3.15.1",
    "tslint-config-standard": "^1.5.0",
    "typescript": "^2.2.2",
    "webpack": "^1.13.2",
    "webpack-dashboard": "^0.2.0",
    "webpack-dev-server": "^1.16.2"
  },
  "jest": {
    "testEnvironment": "node"
  }
}