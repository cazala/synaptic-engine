{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "declarationDir": "typings",
    "stripInternal": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "types": [],
    "lib": [
      "es5",
      "es2015.promise"
    ]
  },
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ],
  "include": [
    "./typings/index.d.ts",
    "src/**/*"
  ]
}