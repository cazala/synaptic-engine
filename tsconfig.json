{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "stripInternal": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "types": [],
    "lib": [
      "es5",
      "es2015.promise",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "static",
    "dist"
  ],
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}